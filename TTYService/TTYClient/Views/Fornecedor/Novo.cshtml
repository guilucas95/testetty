@model TTYClient.Models.Fornecedor
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Novo Fornecedor</h4>
        <div class="form-group">
            @Html.LabelFor(m => m.Nome, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @placeholder = "Nome Fornecedor Ltda" })
                @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Estado, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Estado, new { @class = "form-control", @placeholder = "Minas Gerais" })
                @Html.ValidationMessageFor(m => m.Estado, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Cidade, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Cidade, new { @class = "form-control", @placeholder = "Belo Horizonte" })
                @Html.ValidationMessageFor(m => m.Cidade, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Status, new { @class = "control-label col-md-2", @placeholder = "Ativado" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Status, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Demanda, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Demanda, new { @class = "form-control", @placeholder = "10", @maxLength = "2" })
                @Html.ValidationMessageFor(m => m.Demanda, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Vigencia, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Vigencia, new { @class = "form-control", @placeholder = "DD/MM/AA" })
                @Html.ValidationMessageFor(m => m.Vigencia, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-control-static">
            <form class="form-group">
                <div class="form-group">
                    @Html.LabelFor(m => m.NomeContato, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.NomeContato, new { @class = "form-control", @placeholder = "Contato Responsável" })
                        @Html.ValidationMessageFor(m => m.NomeContato, "", new { @class = "text-danger" })
                    </div>

                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "exemplo@TTY.com" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Telefone, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Telefone, new { @class = "form-control", @placeholder = "(00) 0 0000-0000" })
                        @Html.ValidationMessageFor(m => m.Telefone, "", new { @class = "text-danger" })
                    </div>
                </div>

            </form>
        </div>






        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-success" />
                <a href="@Url.Action("Novo", "Fornecedor")">Editar</a>
                <a href="@Url.Action("Index", "Fornecedor")">Exibir</a>
            </div>
        </div>
    </div>



















    <script type="text/javascript">
        $(document).ready(function () {
            $('#Vigencia').datepicker({
                dateFormat: "dd/mm/yy",
                showStatus: true,
                showWeeks: true,
                currentText: 'Now',
                autoSize: true,
                gotoCurrent: true,
                showAnim: 'blind',
                highlightWeek: true
            });
        });
    </script>

}